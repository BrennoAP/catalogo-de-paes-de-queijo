<%- include("partials/header") %>

<div class="container mt-5">
  <h2>Cadastrar Pão</h2>
  <form action="/paes" method="POST" enctype="multipart/form-data" class="mt-3">

    <!-- Nome do pão -->
    <div class="mb-3">
      <label for="name" class="form-label">Nome do Pão</label>
      <input type="text" class="form-control" id="name" name="name" required>
    </div>

    <!-- Preço -->
    <div class="mb-3">
      <label for="preco" class="form-label">Preço</label>
      <input type="number" class="form-control" id="preco" name="preco" step="0.01" required>
    </div>

    <!-- Textura -->
    <div class="mb-3">
      <label for="textura" class="form-label">Textura</label>
      <input type="text" class="form-control" id="textura" name="textura">
    </div>

    <!-- Seleção de padaria existente -->
    <div class="mb-3">
      <label for="padariaId" class="form-label">Padaria</label>
      <select class="form-select" id="padariaId" name="padariaId" required>
        <option value="" selected disabled>Selecione uma padaria</option>
        <% padarias.forEach(p => { %>
          <option value="<%= p.id %>"><%= p.name %></option>
        <% }) %>
      </select>
    </div>

    <!-- Botão para abrir modal -->
    <button type="button" class="btn btn-secondary mb-3" data-bs-toggle="modal" data-bs-target="#modalNovaPadaria">
      Criar nova padaria
    </button>

    <!-- Modal da nova padaria -->
    <div class="modal fade" id="modalNovaPadaria" tabindex="-1" aria-labelledby="modalNovaPadariaLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modalNovaPadariaLabel">Criar Nova Padaria</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label for="novaPadariaNome" class="form-label">Nome da Nova Padaria</label>
              <input type="text" class="form-control" id="novaPadariaNome" name="novaPadariaNome">
            </div>
            <div class="mb-3">
              <label for="novaPadariaEndereco" class="form-label">Endereço</label>
              <input type="text" class="form-control" id="novaPadariaEndereco" name="novaPadariaEndereco">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Confirmar</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Upload de foto -->
    <div class="mb-3">
      <label for="foto" class="form-label">Foto do Pão</label>
      <input type="file" class="form-control" id="foto" name="foto" accept="image/*">
    </div>

    <!-- Botão de submit -->
    <button type="submit" class="btn btn-success">Salvar</button>
  </form>
</div>

<%- include("partials/footer") %>

<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
