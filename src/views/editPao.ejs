<%- include('partials/header', { title: 'Editar Pão' }) %>

<body class="container py-4">
  <h1 class="mb-4">Editar Pão</h1>

  <form method="POST" action="/edit/<%= pao.id %>">
    <div class="mb-3">
      <label class="form-label">Nome</label>
      <input type="text" class="form-control" name="name" value="<%= pao.name %>" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Preço</label>
      <input type="number" step="0.01" class="form-control" name="preco" value="<%= pao.preco %>" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Textura</label>
      <input type="text" class="form-control" name="textura" value="<%= pao.textura %>" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Descrição</label>
      <textarea class="form-control" name="descricao" required><%= pao.descricao %></textarea>
    </div>
    <div class="mb-3">
      <label class="form-label">Padaria</label>
      <select class="form-select" name="padariaId" required>
        <% padarias.forEach(p => { %>
          <option value="<%= p.id %>" <%= p.id === pao.padariaId ? 'selected' : '' %>><%= p.name %></option>
        <% }) %>
      </select>
    </div>
    <button type="submit" class="btn btn-warning">Salvar Alterações</button>
    <a href="/" class="btn btn-secondary">Cancelar</a>
  </form>
</body>

<%- include('partials/footer') %>
