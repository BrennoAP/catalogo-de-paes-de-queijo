<%- include('partials/header', { title: 'Lista de Pães' }) %>

  <body class="container py-4">

    <div class="text-center mb-4">
      <h1>Esses são os pães de queijo de Viçosa-mg!</h1>
      <p>Selecione filtros ou navegue pelas páginas abaixo</p>
    </div>

    <!-- Formulário de filtros -->
    <form method="GET" action="/listall" class="row g-3 mb-4">
      <div class="col-md-3">
        <label for="textura" class="form-label">Textura</label>
        <select name="textura" id="textura" class="form-select">
          <option value="">Todas</option>
          <% texturas.forEach(t=> { %>
            <option value="<%= t %>" <%=query.textura==t ? 'selected' : '' %>>
              <%= t %>
            </option>
            <% }) %>
        </select>
      </div>

      <div class="col-md-2">
        <label class="form-label">Preço mínimo</label>
        <input type="number" step="0.10" class="form-control" name="minPreco" value="<%= query.minPreco || '' %>">
      </div>
      <div class="col-md-2">
        <label class="form-label">Preço máximo</label>
        <input type="number" step="0.10" class="form-control" name="maxPreco" value="<%= query.maxPreco || '' %>">
      </div>
      <div class="col-md-3">
        <label class="form-label">Padaria</label>
        <select name="padariaId" class="form-select">
          <option value="">Todas</option>
          <% padarias.forEach(p=> { %>
            <option value="<%= p.id %>" <%=query.padariaId==p.id ? 'selected' : '' %> >
              <%= p.name %> - <%= p.endereco %>
            </option>
            <% }) %>
        </select>
      </div>
      <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-primary w-100">Filtrar</button>
      </div>
    </form>

    <!-- Botão listar todos -->
    <div class="text-center mb-4">
      <a href="/listall" class="btn btn-secondary">Listar Todos</a>
    </div>

    <!-- Cards dos pães -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% paes.forEach(pao=> { %>
        <div class="col">
          <div class="card h-100">
            <% if (pao.foto) { %>
              <img src="/uploads/<%= pao.foto %>" class="card-img-top" style="object-fit: fill; height: 200px;"
                alt="<%= pao.name %>">
              <% } else { %>
                <div class="bg-secondary text-white d-flex justify-content-center align-items-center"
                  style="height: 200px;">
                  Sem foto
                </div>
                <% } %>
                  <div class="card-body">
                    <h5 class="card-title">
                      <%= pao.name %>
                    </h5>
                    <p class="card-text">
                      <strong>Preço:</strong> R$ <%= pao.preco.toFixed(2) %><br>
                        <strong>Textura:</strong>
                        <%= pao.textura %><br>
                          <strong>Padaria:</strong>
                          <%= pao.padaria.name %><br>
                          <strong>Endereço:</strong>
                          <%= pao.padaria.endereco %>
                    </p>
                    <% if (pao.descricao) { %>
                      <p class="card-text"><em>
                          <%= pao.descricao %>
                        </em></p>
                      <% } %>
                  <!-- botaoes para deletar e editar -->
                   
                        <% if (user && user.role==='admin' ) { %>
                          <button type="button" class="btn btn-sm btn-danger mt-2" data-bs-toggle="modal"
                            data-bs-target="#deleteModal<%= pao.id %>">
                            Deletar
                          </button>

                           <a href="/edit/<%= pao.id %>" class="btn btn-sm btn-warning mt-2">
                            Editar
                           </a>

                          <!-- Modal -->
                          <div class="modal fade" id="deleteModal<%= pao.id %>" tabindex="-1"
                            aria-labelledby="deleteModalLabel<%= pao.id %>" aria-hidden="true">
                            <div class="modal-dialog">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h5 class="modal-title" id="deleteModalLabel<%= pao.id %>">Confirmação</h5>
                                  <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Fechar"></button>
                                </div>
                                <div class="modal-body">
                                  Deseja realmente deletar o pão "<%= pao.name %>"?
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary"
                                    data-bs-dismiss="modal">Cancelar</button>
                                  <form action="/pao/delete/<%= pao.id %>" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger">Confirmar Delete</button>
                                  </form>
                                </div>
                              </div>
                            </div>
                          </div>
                          <% } %>

                  </div>
          </div>
        </div>
        <% }) %>
    </div>

    <!-- Paginação -->
    <nav aria-label="Paginação" class="mt-4">
      <ul class="pagination justify-content-center">
        <% for (let i=1; i <=totalPages; i++) { %>
          <li class="page-item <%= i === page ? 'active' : '' %>">
            <a class="page-link" href="/listall?<%= new URLSearchParams({...query, page: i}).toString() %>">
              <%= i %>
            </a>
          </li>
          <% } %>
      </ul>
    </nav>

  </body>

  <%- include('partials/footer') %>